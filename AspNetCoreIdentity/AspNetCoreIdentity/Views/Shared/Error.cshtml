@model ErrorViewModel
@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.Titulo) ? "Erro" : Model.Titulo;
}

@if (Model == null)
{
    <div>
        <h2 class="text-danger">Ooops! Ocorreu um erro. Nosso time será informado e verificaremos o erro!</h2>
    </div>
}
else
{
    <h1>@Html.Raw(Model.Titulo)</h1>
    <h2 class="text-danger">@Html.Raw(Model.Menssagem)</h2>
}

